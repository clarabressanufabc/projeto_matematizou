# ev_galton_report.py
import numpy as np
from math import comb
import random

# ----- parâmetros do quadro -----
n = 9                    # linhas ÍMPAR
S = n + 1                # slots = 10
SLOTS = np.array([-80, 60, -50, 50, -60, 90, -40, 50, -50, 60], dtype=float)

# ----- matriz P(j|s) com renormalização de borda -----
def prob_matrix(n=9):
    S = n + 1
    P = np.zeros((S, S), float)
    for s in range(S):
        for j in range(S):
            num = j - s + n
            if num % 2 == 0:
                r = num // 2
                if 0 <= r <= n:
                    P[j, s] = comb(n, r) / (2**n)
    colsum = P.sum(axis=0, keepdims=True)
    colsum[colsum == 0.0] = 1.0
    return P / colsum

P = prob_matrix(n)

# ----- EV teórico por coluna -----
EV = SLOTS @ P  # shape (10,)
print("EV teórico por coluna (s=0..9):")
print([round(x,3) for x in EV.tolist()])
print("Melhores colunas (EV>0):", [s for s,x in enumerate(EV) if x>0])

# ----- simulação (validação Monte Carlo) -----
def sim_drop(start_s, slots=SLOTS, n=9, trials=20000, seed=123):
    random.seed(seed)
    hits = np.zeros(S, int)
    for _ in range(trials):
        # caminhadas: j = s + (2r - n) com r ~ Binomial(n, 1/2)
        r = np.random.binomial(n, 0.5)
        j = start_s + (2*r - n)
        # corta fora e renormaliza: se saiu dos limites, reamostra
        while not (0 <= j < S):
            r = np.random.binomial(n, 0.5)
            j = start_s + (2*r - n)
        hits[j] += 1
    # estima EV empírico
    probs = hits / hits.sum()
    return (slots @ probs), probs, hits

print("\nSimulação rápida (20k) por coluna:")
for s in range(S):
    ev_hat, probs, hits = sim_drop(s, trials=20000, seed=100+s)
    print(f"s={s}: EV≈{ev_hat:.3f}")
